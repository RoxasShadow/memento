<% title 'Sign in' %>

<%= bootstrap_form_for resource, :as => resource_name, :url => session_path(resource_name), style: :horizontal, left: 'col-sm-4', right: 'col-sm-5' do |f| %>
  <%= f.email_field    :email,   :autofocus => true %>
  <%= f.password_field :password                    %>

  <% if devise_mapping.rememberable? -%>
    <%= f.form_group  :remember_me, label: { text: 'Remember me' } do %>
      <%= f.check_box :remember_me, label: '' %>
    <% end %>
  <% end -%>

  <%= f.submit 'Sign in' %>
<% end %>

<%= render 'devise/shared/links' %>
