<% title 'Sign up' %>

<%= bootstrap_form_for resource, :as => resource_name, :url => registration_path(resource_name), style: :horizontal, left: 'col-sm-4', right: 'col-sm-5' do |f| %>
  <%= devise_error_messages! %>

  <%= f.email_field    :email, :autofocus => true %>
  <%= f.password_field :password                  %>
  <%= f.password_field :password_confirmation     %>
  <%= f.submit         'Sign up'                  %>
<% end %>

<%= render 'devise/shared/links' %>
